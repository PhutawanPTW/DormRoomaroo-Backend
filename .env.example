# Database
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require

# Firebase (สำหรับ Authentication เท่านั้น)
FIREBASE_PROJECT_ID=your-project-id
PORT=3000

# Firebase Service Account Keys
# Option 1: Use file paths (for local development)
FIREBASE_SERVICE_ACCOUNT_KEY_PATH=./firebase-admin-key.json
FIREBASE_STORAGE_SERVICE_ACCOUNT_KEY_PATH=./storage-admin-key.json

# Option 2: Use environment variables (for production)
# FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"...","private_key_id":"...","private_key":"...","client_email":"...","client_id":"...","auth_uri":"...","token_uri":"...","auth_provider_x509_cert_url":"...","client_x509_cert_url":"..."}
# FIREBASE_STORAGE_SERVICE_ACCOUNT_KEY={"type":"service_account",...}

# Firebase Storage (เก็บไว้สำหรับ compatibility)
FIREBASE_STORAGE_BUCKET=your-project.appspot.com

# Cloudflare R2 Storage (ใช้สำหรับเก็บรูปภาพ)
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=your-bucket-name
R2_PUBLIC_DOMAIN=https://your-custom-domain.com

# ML API
ML_API_URL=http://localhost:8000